modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx parcel serve index.html --port 5000 --host 0.0.0.0"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "npx parcel serve index.html --port 5000 --host 0.0.0.0"]

[[ports]]
localPort = 5000
externalPort = 80
